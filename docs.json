{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "ModelRunner Docs",
  "colors": {
    "primary": "#01eaff",
    "light": "#01ffff",
    "dark": "#01eaff"
  },
  "favicon": "/favicon.ico",

  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "icon": "book",
        "description": "Set up your documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "api-keys"
            ]
          },
          {
            "group": "SDKs",
            "pages": [
              "clients/js-client",
              "clients/python-client"
            ]
          },
          {
            "group": "Recipes",
            "pages": [
              "recipes-nextjs-app"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "icon": "terminal",
        "description": "Reference for the API",
        "openapi": "openapi.json",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/dark.png",
    "dark": "/logo/light.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@modelrunner.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "ModelRunner",
      "href": "https://modelrunner.ai"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/modelrunnerai",
      "github": "https://github.com/modelrunner"
    }
  },
  "playground": {
    "display": "interactive",
    "examples": {
     "languages": ["curl", "python", "javascript"],
     "defaults": "all"
   }
  }
}
